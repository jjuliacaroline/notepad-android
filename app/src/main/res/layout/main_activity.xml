<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkCyan">


    <Button
        android:id="@+id/text_input"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:background="@color/midCyan"
        android:text="@string/text_input" />

    <Button
        android:id="@+id/voice_input"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/text_input"
        android:layout_alignStart="@+id/text_input"
        android:layout_below="@+id/text_input"
        android:layout_marginTop="67dp"
        android:text="@string/voice_recognition_input"
        android:background="@color/midCyan"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="@string/choose_note_input_method"
        android:textColor="@color/white"
        android:textSize="15dp"/>
</RelativeLayout>